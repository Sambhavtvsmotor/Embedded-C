#include<stdio.h>
#include<stdint.h>

void wait_for_user_input(){
	int c;
	/* remove leftover chars up to newline */
	while ((c = getchar()) != '\n' && c != EOF) { /* discard */ }

	printf("Press Enter to exit\n");
	getchar();
}

void invalid(int retVal){

	if(!(retVal)){
		printf("------Invalid input------\n");
		wait_for_user_input();
	}

	return ;
}

void whileLoop(){

	uint8_t a = 10;
	while(a){
		printf("%d\n",a);
		a--;
	}

}



